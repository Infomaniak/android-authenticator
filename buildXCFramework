# Variables
bold=$(tput bold)
endBold=$(tput sgr0)

# Scripts
echo "${bold}Start cleanAll Task${endBold}"
./gradlew cleanAll
echo "${bold}cleanAll task completed.${endBold}"

echo "${bold}Start assembleMultiPlatformLibReleaseXCFramework Task${endBold}"
./gradlew :multiplatform-lib:assembleMultiPlatformLibReleaseXCFramework
echo "${bold}cleanAll task completed.${endBold}"
